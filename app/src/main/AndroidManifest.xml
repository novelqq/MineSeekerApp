<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ryan.mineseeker">

    <application
        android:allowBackup="true"
        android:icon="@drawable/chaika"
        android:label="@string/app_name"
        android:roundIcon="@drawable/chaika"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:label="@string/menu_title"
            android:screenOrientation="landscape" />
        <activity android:name=".PlayActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:label="@string/play_title"
            android:screenOrientation="landscape"/>
        <activity android:name=".OptionActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:label="@string/option_title"
            android:screenOrientation="landscape"/>
        <activity android:name=".HelpActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:label="@string/help_title"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>